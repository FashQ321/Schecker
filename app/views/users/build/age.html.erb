<div class="container big-padding text-center">

	<%= render "users/fragments/nav" %>

	<div class="row full">
		<div class="medium-9 medium-centered columns">

			<%= form_for @user, url: user_build_path(@user, @step), method: :put do |f| %>

				<%= render "shared/form_errors", object: @user %>
				<%= f.hidden_field :welcome_step, value: @step %>

				<h1 class="welcome">Details</h1>

				<div class="row">
					<div class="medium-6 columns">
						<div class="options_padding">
							<div class="single_option vertical tiny">
								<h3 class="uppercase">Height</h3>
								<div class="row">
									<div class="small-6 columns">
										<div class="switch floating right">
											<%= f.radio_button :type_of_height, "inches" %>
									    <label for="user_type_of_height_inches" class="first">Inches</label>
									    <%= f.radio_button :type_of_height, "cm" %>
									    <label for="user_type_of_height_cm" class="second">Cm</label>
									    <span class="switch-selection"></span>
									  </div>
									</div>
									<div class="small-4 end columns">
										<div class="floating_labels">
											<%= f.number_field :height, step: 0.1, autofocus: true %>
											<label><%= f.object.type_of_height %></label>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="medium-6 columns">
						<div class="options_padding">
							<div class="single_option vertical tiny">
								<h3 class="uppercase">Weight</h3>
								<div class="row">
									<div class="small-6 columns">
										<div class="switch floating right">
											<%= f.radio_button :type_of_weight, "libres" %>
									    <label for="user_type_of_weight_libres" class="first">Libres</label>
									    <%= f.radio_button :type_of_weight, "kg" %>
									    <label for="user_type_of_weight_kg" class="second">Kg</label>
									    <span class="switch-selection"></span>
									  </div>
									</div>
									<div class="small-4 end columns">
										<div class="floating_labels">
											<%= f.number_field :weight, step: 0.1 %>
											<label><%= f.object.type_of_weight %></label>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				<div class="row">
					<div class="medium-6 columns">
						<div class="row">
							<div class="medium-10 columns">
								<div class="options_padding">
									<div class="single_option vertical tiny">
										<h3 class="uppercase">Age</h3>
										<%= f.number_field :age, in: 18...99, class: "text-center" %>
									</div>
								</div>
							</div>
						</div>
					</div>
					<div class="medium-6 columns">
						<div class="row">
							<div class="medium-10 columns">
								<div class="options_padding">
									<div class="single_option vertical tiny">
										<h3 class="uppercase">Fit</h3>
										<div class="switch floating centered">
											<%= f.radio_button :fit, "loose" %>
									    <label for="user_fit_loose" class="first">Loose</label>
									    <%= f.radio_button :fit, "tight" %>
									    <label for="user_fit_tight" class="second">Tight</label>
									    <span class="switch-selection"></span>
									  </div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>

				

				

				

				<%= f.submit "Continue", class: "btn" %>

			<% end %>

		</div>
	</div>

</div>