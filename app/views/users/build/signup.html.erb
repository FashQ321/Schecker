<div class="container big-padding text-center">

	<%= render "users/fragments/nav" %>

	<div class="row full">
		<div class="medium-6 medium-centered columns">

			<%= form_for @user, url: user_build_path(@user, @step), method: :put do |f| %>

				<%= render "shared/form_errors", object: @user %>
				<%= f.hidden_field :welcome_step, value: @step %>

				<h3>Congrats! You have created your size profile. Register now to save your profile and use across various retailers</h3>

				<div class="options_padding">
					
						<%= link_to "Sign up with Facebook", user_omniauth_authorize_path(:facebook), class: "facebook" %>

						<div class="super_divider"><span>OR</span></div>

					<div class="single_option vertical normal">

						<div class="row">
							<div class="medium-6 columns">
								<div class="form-group">
									<%= f.label :first_name, class: "modern" %>
									<%= f.text_field :first_name, autofocus: true %>
								</div>
							</div>
							<div class="medium-6 columns">
								<div class="form-group">
									<%= f.label :last_name, class: "modern" %>
									<%= f.text_field :last_name %>
								</div>
							</div>
						</div>
						<div class="row">
							<div class="medium-6 columns">
								<div class="form-group">
									<%= f.label :email, class: "modern" %>
									<%= f.email_field :email %>
								</div>
							</div>
							<div class="medium-6 columns">
								<div class="form-group">
									<%= f.label :password, class: "modern" %>
									<%= f.password_field :password, autocomplete: "off" %>
								</div>
							</div>
						</div>

					</div>
				</div>

				<%= f.submit "Finish", class: "btn" %>

			<% end %>

		</div>
	</div>

</div>