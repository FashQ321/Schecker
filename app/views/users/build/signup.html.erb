<div class="container big-padding text-center">

	<%= render "users/fragments/nav" %>

	<div class="row full">
		<div class="medium-4 medium-centered columns">

			<%= form_for @user, url: user_build_path(@user, @step), method: :put do |f| %>

				<%= render "shared/form_errors", object: @user %>
				<%= f.hidden_field :welcome_step, value: @step %>

				<h1 class="welcome">Create an account</h1>

				<div class="options_padding">
					<div class="single_option vertical normal">
						<div class="form-group">
							<%= f.label :first_name, class: "modern" %>
							<%= f.text_field :first_name, autofocus: true %>
						</div>

						<div class="form-group">
							<%= f.label :last_name, class: "modern" %>
							<%= f.text_field :last_name %>
						</div>

						<div class="form-group">
							<%= f.label :email, class: "modern" %>
							<%= f.email_field :email %>
						</div>

						<div class="form-group">
							<%= f.label :password, class: "modern" %>
							<%= f.password_field :password, autocomplete: "off" %>
						</div>
					</div>
				</div>

				<%= f.submit "Finish", class: "btn" %>

			<% end %>

		</div>
	</div>

</div>